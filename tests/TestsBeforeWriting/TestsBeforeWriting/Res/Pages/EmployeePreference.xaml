<Page x:Class="TestsBeforeWriting.Res.Pages.EmployeePreference"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestsBeforeWriting.Res.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="650"
      Title="EmployeePreference"
      Background="White"
      >

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,15,0,0" Height="25" Width="305" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Label Content="Pracownik:" Width="150" Margin="10,0,0,0" />
            <ComboBox Width="150" SelectedIndex="0">
                <ComboBoxItem Content="Przykladowy pracownik"/>
            </ComboBox>
        </StackPanel>
        <Button Content="check" Name="showClick" HorizontalAlignment="Left" Margin="60,174,0,0" VerticalAlignment="Top" Height="36" Width="76" Click="showClick_Click"/>
        <Label Content="Label" Name="show" HorizontalAlignment="Left" Margin="0,94,0,0" VerticalAlignment="Top" Width="640" Height="48"/>
    </Grid>
</Page>
